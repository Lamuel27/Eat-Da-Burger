<h1>Welcome to Krusty Burger!</h1>

<main>
    <div class="container">
        <div class="row">
            <div class="col s6">
                <div class="panel-heading" id="lefthead"><strong>Our Burgers</strong></div>
                {{#each burgers}}
                {{#unless this.devoured}}
                <div>
                    <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                        <button type="submit" class='burgerMenu'> {{this.burger_name}}</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
            <div class="panel-heading" id="righthead"><strong>Devoured Burgers</strong></div>
            <div class="col s6">
                {{#each burgers}}
                {{#if this.devoured}}
                <div class='devouredBurger'>
                    <div>
                        {{this.burger_name}}
                    </div>
                </div>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</main>

<h2>Add A Burger!</h2>

<div class="row">
    <div class="col s12">
        <form action="/burgers" method="POST">
            <input type="text" id="name" name="burger_name" placeholder="Clogger Burger">
            <button style = "margin-bottom: 20px;" type="submit" class="addBurger">Add The Burger</button>
        </form>
        <iframe width="560" height="315" src="https://www.youtube.com/embed/r2VZe6AgVZI" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen></iframe>
    </div>
</div>